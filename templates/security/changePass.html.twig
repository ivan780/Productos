{% extends 'base.html.twig' %}

{% block title %}Change password{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
    <div id="logreg-forms">
        <form class="form-signin"  action="{{ path('listAll') }}" method="post">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Change password</h1>
            <input type="email" value="{{ email }}" hidden>
            <input type="password" id="inputPassword" name="pass" class="form-control" placeholder="Password" required="">
            <input type="password" id="inputConPassword" class="form-control" placeholder="Confirm password" required="">

            {# Ahora te lleva directamente a cambiar la contrase√±a #}
            <button class="btn btn-success btn-block" type="submit">
                <i class="fas fa-key"></i> Change password
            </button>
        </form>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/login.js') }}"></script>
    </script>
{% endblock %}